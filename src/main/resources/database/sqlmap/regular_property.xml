<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abasystem.crawler.Model.PeterPan.RegularProperty">

    <!-- Mapper -->
    <resultMap id="RegularProperty" type="RegularProperty" />

    <select id="selectProps" resultMap="RegularProperty">
        SELECT * FROM regular_properties;
    </select>

    <select id="selectPropById" resultMap="RegularProperty" parameterType="int">
        SELECT * FROM regular_properties WHERE id = #{id};
    </select>

    <insert id="insertProp" useGeneratedKeys="true" keyProperty="id" parameterType="RegularProperty">
        INSERT INTO regular_properties (title, url, description, date) VALUES (#{title}, #{url}, #{description}, #{date})
    </insert>

    <update id="updateProp" parameterType="RegularProperty">
        UPDATE regular_properties SET phone = #{phone} WHERE id = #{id}
    </update>

    <delete id="deleteProp" parameterType="int">
        DELETE FROM regular_properties WHERE id = #{id}
    </delete>

    <select id="selectLastId" resultType="int">
        SELECT LAST_INSERT_ID()
    </select>
</mapper>
